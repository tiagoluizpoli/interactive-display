{
  "name": "interactive-display-backend",
  "version": "1.0.0",
  "description": "",
  "main": "index.js",
  "type": "module",
  "scripts": {
    "install:all": "pnpm install && cd apps/frontend && pnpm install && cd ../backend && pnpm install",
    "dev:front": "cd apps/frontend && pnpm dev",
    "dev:back": "cd apps/backend && pnpm dev",
    "dev": "concurrently --kill-others-on-fail \"pnpm dev:front\" \"pnpm dev:back\"",
    "build": "cd apps/frontend && pnpm build && cd ../backend && pnpm build:back",
    "lint": "biome check .",
    "lint:fix": "biome check --write ."
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "packageManager": "pnpm@10.11.0",
  "dependencies": {},
  "devDependencies": {
    "@biomejs/biome": "1.9.4",
    "@types/node": "^22.15.18",
    "concurrently": "^9.1.2",
    "dotenv": "^16.5.0",
    "typescript": "^5.8.3"
  }
}
